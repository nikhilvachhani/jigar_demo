<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.frami.ui.dashboard.myprofile.MyProfileFragment">

    <data>

        <variable
            name="viewModel"
            type="com.frami.ui.dashboard.myprofile.MyProfileFragmentViewModel" />

        <import type="com.frami.utils.AppConstants" />

        <import type="android.text.TextUtils" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screen_bg">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/toolBarLayout"
                        layout="@layout/toolbar_my_profile"
                        android:layout_width="0dp"
                        android:layout_height="?attr/actionBarSize"
                        app:isNewNotification="@{viewModel.isNewNotificationObserver()}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clTOP"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/toolBarLayout">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivProfilePhoto"
                            loadCircleImage="@{viewModel.userProfileData!=null?viewModel.userProfileData.profilePhotoUrl:null}"
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/circular_shape_bg_white"
                            android:padding="4dp"
                            android:src="@drawable/ic_user_placeholder"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvName"
                            style="@style/TextViewStyleBold"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@{viewModel.userProfileData!=null?viewModel.userProfileData.userName:``}"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/text_size_medium"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivProfilePhoto"
                            tools:text="@string/na" />

                        <View
                            android:id="@+id/viewFollow"
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:background="@color/light_green_divider"
                            android:paddingVertical="4dp"
                            android:visibility="@{viewModel.isProfileVisible ? View.VISIBLE:View.INVISIBLE, default=invisible}"
                            app:layout_constraintBottom_toBottomOf="@+id/llFollowers"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/llFollowers"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/llFollowers"
                            handleEnable="@{!viewModel.isRefreshing}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="@{viewModel.isProfileVisible ? View.VISIBLE:View.INVISIBLE, default=invisible}"
                            app:layout_constraintEnd_toStartOf="@+id/viewFollow"
                            app:layout_constraintTop_toBottomOf="@+id/tvName"
                            tools:visibility="visible">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextViewStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/followers"
                                android:textColor="@color/medium_light_green"
                                android:textSize="@dimen/text_size_xsmall" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextViewStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@{viewModel.userProfileData != null ? String.valueOf(viewModel.userProfileData.followersCount) : `0`}"
                                android:textColor="@color/dark_green"
                                android:textSize="@dimen/text_size_regular"
                                tools:text="48" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llFollowing"
                            handleEnable="@{!viewModel.isRefreshing}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="@{viewModel.isProfileVisible ? View.VISIBLE:View.INVISIBLE, default=invisible}"
                            app:layout_constraintStart_toEndOf="@+id/viewFollow"
                            app:layout_constraintTop_toTopOf="@+id/llFollowers"
                            tools:visibility="visible">


                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextViewStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/following"
                                android:textColor="@color/medium_light_green"
                                android:textSize="@dimen/text_size_xsmall" />

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextViewStyleBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@{viewModel.userProfileData != null ? String.valueOf(viewModel.userProfileData.followingsCount) : `0`}"
                                android:textColor="@color/dark_green"
                                android:textSize="@dimen/text_size_regular"
                                tools:text="24" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFollow"
                            style="@style/BorderlessButton.Bold"
                            handleEnable="@{!viewModel.isRefreshing}"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:backgroundTint="@{viewModel.userProfileData.isButtonDisable?@color/disable_green:@color/dark_to_light_green}"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:text="@{viewModel.userProfileData.statusText}"
                            android:textColor="@{viewModel.userProfileData.buttonDisable?@color/dark_green:@color/dark_green}"
                            android:textSize="@dimen/text_size_regular"
                            android:visibility="@{viewModel.userProfileData.isMyProfile || viewModel.isFollowAPIRunning ||  viewModel.userProfileData.userFollowStatus.equalsIgnoreCase(AppConstants.KEYS.Closed) ? View.GONE: View.VISIBLE, default=gone}"
                            app:cornerRadius="30dp"
                            app:layout_constraintEnd_toEndOf="@id/guidelineEndTopView"
                            app:layout_constraintStart_toStartOf="@id/guidelineStartTopView"
                            app:layout_constraintTop_toBottomOf="@+id/llFollowing"
                            tools:backgroundTint="@color/dark_to_light_green"
                            tools:text="Following"
                            tools:textColor="@color/dark_green"
                            tools:visibility="visible" />

                        <ProgressBar
                            style="@style/BorderlessButton.Regular"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:visibility="@{viewModel.isLoggedInUser ?View.INVISIBLE:viewModel.isFollowAPIRunning ? View.VISIBLE:View.GONE}"
                            app:layout_constraintBottom_toBottomOf="@id/btnFollow"
                            app:layout_constraintEnd_toEndOf="@id/btnFollow"
                            app:layout_constraintStart_toStartOf="@id/btnFollow"
                            app:layout_constraintTop_toTopOf="@id/btnFollow" />

                        <View
                            android:id="@+id/viewDividerPoints"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="20dp"
                            android:background="@color/light_green_divider"
                            app:layout_constraintEnd_toEndOf="@id/guidelineEndTopView"
                            app:layout_constraintStart_toStartOf="@id/guidelineStartTopView"
                            app:layout_constraintTop_toBottomOf="@+id/btnFollow"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPointsDescLable"
                            style="@style/TextViewStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_20"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:text="@string/points_to_next_level"
                            android:textColor="@color/medium_light_green"
                            android:textSize="@dimen/text_size_xsmall"
                            app:layout_constraintStart_toEndOf="@+id/viewPointLeft"
                            app:layout_constraintTop_toBottomOf="@id/viewDividerPoints"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPointsDesc"
                            style="@style/TextViewStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_points_next_level"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="@{viewModel.userProfileData != null &amp;&amp; !TextUtils.isEmpty(viewModel.userProfileData.nextLevel) ? String.valueOf(viewModel.userProfileData.nextLevel) : ``}"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/text_size_regular"
                            app:layout_constraintBottom_toBottomOf="@+id/tvLevelLableDesc"
                            app:layout_constraintStart_toStartOf="@id/tvPointsDescLable"
                            app:layout_constraintTop_toTopOf="@+id/tvLevelLableDesc"
                            tools:text="234"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvLevelLable"
                            style="@style/TextViewStyleBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/level"
                            android:textColor="@color/medium_light_green"
                            android:textSize="@dimen/text_size_xsmall"
                            app:layout_constraintStart_toStartOf="@id/guidelineStartTopView"
                            app:layout_constraintTop_toTopOf="@+id/tvPointsDescLable"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvLevelLableDesc"
                            style="@style/TextViewStyleBold"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/circular_shape_bg_dark_green"
                            android:gravity="center"
                            android:maxLength="2"
                            android:text="@{viewModel.userProfileData != null ? String.valueOf(viewModel.userProfileData.level) : ``}"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/text_size_regular"
                            app:layout_constraintStart_toStartOf="@id/tvLevelLable"
                            app:layout_constraintTop_toBottomOf="@id/tvLevelLable"
                            tools:text="2"
                            tools:visibility="visible" />

                        <View
                            android:id="@+id/viewPointLeft"
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="32dp"
                            android:background="@color/light_green_divider"
                            app:layout_constraintBottom_toBottomOf="@+id/tvPointsDesc"
                            app:layout_constraintStart_toEndOf="@+id/tvLevelLable"
                            app:layout_constraintTop_toTopOf="@+id/tvPointsDescLable"
                            tools:visibility="visible" />

                        <View
                            android:id="@+id/viewPointRight"
                            android:layout_width="2dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="32dp"
                            android:background="@color/light_green_divider"
                            app:layout_constraintBottom_toBottomOf="@+id/tvPointsDesc"
                            app:layout_constraintStart_toEndOf="@+id/tvPointsDescLable"
                            app:layout_constraintTop_toTopOf="@+id/tvPointsDescLable"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTotalPointsLable"
                            style="@style/TextViewStyleBold"
                            handleEnable="@{!viewModel.isRefreshing}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_20"
                            android:gravity="center_vertical"
                            android:text="@string/total_points"
                            android:textColor="@color/medium_light_green"
                            android:textSize="@dimen/text_size_xsmall"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/viewPointRight"
                            app:layout_constraintTop_toTopOf="@+id/tvPointsDescLable"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTotalPoints"
                            style="@style/TextViewStyleBold"
                            handleEnable="@{!viewModel.isRefreshing}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_total_points"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:text="@{viewModel.userProfileData != null ? String.valueOf(viewModel.userProfileData.totalPoints) : ``}"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/text_size_regular"
                            app:layout_constraintBottom_toBottomOf="@+id/tvLevelLableDesc"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@id/tvTotalPointsLable"
                            app:layout_constraintTop_toTopOf="@+id/tvLevelLableDesc"
                            tools:text="234"
                            tools:visibility="visible" />

                        <View
                            android:id="@+id/viewDividerPointsBottom"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:background="@color/light_green_divider"
                            app:layout_constraintEnd_toEndOf="@id/guidelineEndTopView"
                            app:layout_constraintStart_toStartOf="@id/guidelineStartTopView"
                            app:layout_constraintTop_toBottomOf="@+id/viewPointRight"
                            tools:visibility="visible" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvFollowLock"
                            style="@style/TextViewStyleMedium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:drawableStart="@drawable/ic_lock_private"
                            android:text="@string/follow_tomas_rening_to_see_profile_details"
                            android:textColor="@color/dark_green"
                            android:textSize="@dimen/text_size_small"
                            android:includeFontPadding="false"
                            android:visibility="@{viewModel.userProfileData.isFollowLockVisible()?View.VISIBLE:View.GONE}"
                            app:layout_constraintStart_toStartOf="@+id/guidelineStartTopView"
                            app:layout_constraintEnd_toEndOf="@id/guidelineEndTopView"
                            app:layout_constraintTop_toBottomOf="@id/viewDividerPointsBottom"
                            tools:visibility="visible" />

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cvEmployer"
                            handleEnable="@{!viewModel.isRefreshing}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="40dp"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/card_round_corner_16"
                            app:cardElevation="0dp"
                            app:cardMaxElevation="0dp"
                            app:cardUseCompatPadding="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvFollowLock">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvEmployer"
                                style="@style/TextViewStyleSemiBold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="20dp"
                                android:drawableStart="@drawable/ic_user_placeholder"
                                android:drawableEnd="@drawable/ic_forward"
                                android:drawablePadding="@dimen/drawable_padding"
                                android:ellipsize="end"
                                android:gravity="start|center_vertical"
                                android:maxLines="1"
                                android:textColor="@color/colorSubHeaderText"
                                android:textSize="@dimen/text_size_small"
                                tools:text="@string/na" />
                        </com.google.android.material.card.MaterialCardView>

                        <!--                        android:visibility="@{viewModel.isProfileVisible ? View.GONE:View.VISIBLE, default=gone}"-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clPrivateProfileText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/cvEmployer"
                            tools:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextViewStyleSemiBold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="center"
                                android:text="@{viewModel.userProfileData.userFollowStatus.equalsIgnoreCase(AppConstants.KEYS.Closed) ? @string/this_profile_is_closed : @string/this_profile_is_private}"
                                android:textColor="@color/themeColor"
                                android:textSize="@dimen/text_size_medium"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineStartTopView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.05" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineEndTopView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.95" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <!--                    android:backgroundTint="@color/inactiveThemeColor"-->
                    <!--                    android:text="@{viewModel.userProfileData.profileVisible ? @string/closed : viewModel.userProfileData.statusText}"-->
                    <!--                    android:textColor="@color/white"-->
                    <!--                    android:visibility="@{viewModel.isProfileVisible ? viewModel.userProfileData.isMyProfile ?View.INVISIBLE: viewModel.isFollowAPIRunning ? View.INVISIBLE: View.VISIBLE : View.INVISIBLE}"-->


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clNotPrivate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:visibility="@{viewModel.isProfileVisible ? View.VISIBLE : View.GONE, default=gone}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clTOP"
                        tools:visibility="visible">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineTop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.03" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineBottom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintGuide_percent="0.95" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineStartProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.05" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineEndProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.95" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clActivity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:visibility="@{viewModel.isActivityVisible ? View.VISIBLE : View.GONE, default=gone}"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="visible">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guidelineStart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.05" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guidelineEnd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.95" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:background="@color/light_green_divider"
                                app:layout_constraintStart_toStartOf="@+id/tabsPeriod"
                                app:layout_constraintEnd_toEndOf="@+id/tabsPeriod"
                                android:layout_marginBottom="1dp"
                                app:layout_constraintBottom_toBottomOf="@+id/tabsPeriod"/>

                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/tabsPeriod"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center|bottom"
                                android:background="@color/transparent"
                                android:overScrollMode="never"
                                android:scrollbars="none"
                                app:layout_constraintEnd_toEndOf="@+id/guidelineEnd"
                                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                                app:layout_constraintTop_toTopOf="parent"
                                app:tabGravity="center"
                                app:tabIndicator="@drawable/tab_indicator_gradient"
                                app:tabIndicatorColor="@null"
                                app:tabIndicatorFullWidth="true"
                                app:tabIndicatorHeight="3dp"
                                app:tabMode="fixed"
                                app:tabPaddingBottom="0dp"
                                app:tabSelectedTextColor="@color/dark_green"
                                app:tabTextAppearance="@style/TabTextAppearanceSmallBoldFont"
                                app:tabTextColor="@color/dark_green" />



                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvActivityTypes"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:focusable="false"
                                android:nestedScrollingEnabled="false"
                                android:orientation="horizontal"
                                android:overScrollMode="never"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                                app:layout_constraintTop_toBottomOf="@+id/tabsPeriod"
                                tools:itemCount="4"
                                tools:listitem="@layout/list_item_activity_types"
                                tools:visibility="visible" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvSummary"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:orientation="vertical"
                                tools:visibility="visible"
                                android:visibility="@{viewModel.activityResponseData != null ?  View.VISIBLE : View.GONE, default=gone}"
                                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                                app:layout_constraintTop_toBottomOf="@id/rvActivityTypes"
                                app:spanCount="3"
                                tools:itemCount="3"
                                tools:listitem="@layout/list_item_activity_summary" />

                            <com.github.mikephil.charting.charts.BarChart
                                android:id="@+id/stackedBarChart"
                                android:layout_width="0dp"
                                android:layout_height="200dp"
                                android:layout_marginTop="12dp"
                                android:background="@color/white"
                                android:paddingVertical="16dp"
                                android:visibility="@{viewModel.activityResponseData != null ? View.VISIBLE : View.INVISIBLE, default=gone}"
                                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                                app:layout_constraintTop_toBottomOf="@id/rvSummary" />

                            <!--                    <com.github.mikephil.charting.charts.LineChart-->
                            <!--                        android:id="@+id/lineChart"-->
                            <!--                        android:layout_width="0dp"-->
                            <!--                        android:layout_height="200dp"-->
                            <!--                        android:layout_marginTop="8dp"-->
                            <!--                        android:visibility="@{viewModel.periodSelected != AppConstants.DURATION.WEEKLY  ? View.VISIBLE:View.GONE}"-->
                            <!--                        app:layout_constraintEnd_toEndOf="@id/guidelineEnd"-->
                            <!--                        app:layout_constraintStart_toStartOf="@id/guidelineStart"-->
                            <!--                        app:layout_constraintTop_toBottomOf="@id/stackedBarChart" />-->

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvActivitiesTitle"
                                style="@style/TextViewStyleSemiBold"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:gravity="start|center_vertical"
                                android:text="@string/see_all_activities"
                                android:textColor="@color/dark_green"
                                android:textSize="@dimen/text_size_medium"
                                android:visibility="@{viewModel.isActivityEmpty ? View.GONE : View.VISIBLE, default=visible}"
                                app:layout_constraintEnd_toStartOf="@id/tvShowAll"
                                app:layout_constraintStart_toStartOf="@id/guidelineStart"
                                app:layout_constraintTop_toBottomOf="@id/stackedBarChart" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvShowAll"
                                style="@style/TextViewStyleRegular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="?android:selectableItemBackground"
                                android:gravity="center"
                                android:visibility="gone"
                                android:padding="10dp"
                                android:text="@string/show_all"
                                android:textSize="@dimen/text_size_small"
                                app:layout_constraintBottom_toBottomOf="@id/tvActivitiesTitle"
                                app:layout_constraintEnd_toEndOf="@id/guidelineEnd"
                                app:layout_constraintTop_toTopOf="@id/tvActivitiesTitle" />

<!--                            android:visibility="@{viewModel.isActivityEmpty ? View.GONE : View.VISIBLE, default=visible}"-->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvActivity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:clipToPadding="false"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvActivitiesTitle"
                                tools:itemCount="2"
                                tools:listitem="@layout/list_item_activity_profile" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvBottomOptionMenu"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clipToPadding="false"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintEnd_toEndOf="@id/guidelineEndProfile"
                            app:layout_constraintStart_toStartOf="@id/guidelineStartProfile"
                            app:layout_constraintTop_toBottomOf="@id/clActivity"
                            tools:itemCount="2"
                            tools:listitem="@layout/list_item_menu" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clPrivateProfile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:visibility="@{viewModel.isProfileVisible ? View.GONE : View.VISIBLE, default=gone}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/clTOP"
                        tools:visibility="visible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_reward_lock"
                            android:tint="@color/themeColor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>